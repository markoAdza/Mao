@model IEnumerable<web.Models.Menu>

@{
    ViewData["Title"] = "Home Page";

}

<div class="text-center">
    <h1 class="display-4">Welcome to the Mao restaurant</h1>

</div>

<div class="card-columns">

    @foreach (var menu in Model)
    {
        <div class="card">

            <a href="@Url.Action("Details", "Menus", new { id=menu.MenuID }, null)
                        ">
                <img src="~/images/@(menu.FoodType).png" />
            </a>

            <div class="card-body">
                <a class="no-decoration" href="@Url.Action("Details", "Menus", new { id=menu.MenuID }, null)
                        ">
                    <h5 class="card-title">@menu.FoodName</h5>
                </a>

                <p class="card-text">@menu.MenuType</p>
            </div>
        </div>
    }

</div>
